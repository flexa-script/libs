namespace flx;

using flx.std.types;

const GET = "GET";
const PUT = "PUT";
const POST = "POST";
const DELETE = "DELETE";
const PATCH = "PATCH";
const HEAD = "HEAD";
const OPTIONS = "OPTIONS";
const TRACE = "TRACE";
const CONNECT = "CONNECT";

struct HttpRequest {
	var hostname: string;
	var path: string;
	var port: int;
	var method: string;
	var headers: Pair[];
	var parameters: Pair[];
	var data: string;
}

struct HttpResponse {
	var headers: Pair[];
	var status: int;
	var status_description: int;
	var data: string;
	var http_version: string;
	var raw: string;
}

fun request(req: HttpRequest): HttpResponse;
